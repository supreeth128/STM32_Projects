#include "stm2f407xx_gpio_driver.h"



/*************************************************************************************
 *
 *	@brief	- Enable Clock for the specified GPIO Port
 *
 *	@param	- pGPIOx Base Address of the GPIO Port to which the pin belongs
 *
 *	@return	- None
 *
 *	@note	- Ports F, G and I are not available in devices with 100-pin packages
 *
 ************************************************************************************/

void GPIO_Clock_Enable(GPIO_TypeDef *pGPIOx)
{
	switch (pGPIOx) {
		case GPIOA:
			RCC->AHB1ENR |= _BV(0);
			break;
		case GPIOB:
			RCC->AHB1ENR |= _BV(1);
			break;
		case GPIOC:
			RCC->AHB1ENR |= _BV(2);
			break;
		case GPIOD:
			RCC->AHB1ENR |= _BV(3);
			break;
		case GPIOE:
			RCC->AHB1ENR |= _BV(4);
			break;
		case GPIOF:
			RCC->AHB1ENR |= _BV(5);
			break;
		case GPIOG:
			RCC->AHB1ENR |= _BV(6);
			break;
		case GPIOH:
			RCC->AHB1ENR |= _BV(7);
			break;
		case GPIOI:
			RCC->AHB1ENR |= _BV(8);
			break;
		default:
			break;
	}
}



/*************************************************************************************
 *
 *	@brief	- Disable Clock for the specified GPIO Port
 *
 *	@param	- pGPIOx Base Address of the GPIO Port to which the pin belongs
 *
 *	@return	- None
 *
 *	@note	- Ports F, G and I are not available in devices with 100-pin packages
 *
 ************************************************************************************/
void GPIO_Clock_Disable(GPIO_TypeDef *pGPIOx)
{
	switch (pGPIOx) {
		case GPIOA:
			RCC->AHB1ENR &= ~_BV(0);
			break;
		case GPIOB:
			RCC->AHB1ENR &= ~_BV(1);
			break;
		case GPIOC:
			RCC->AHB1ENR &= ~_BV(2);
			break;
		case GPIOD:
			RCC->AHB1ENR &= ~_BV(3);
			break;
		case GPIOE:
			RCC->AHB1ENR &= ~_BV(4);
			break;
		case GPIOF:
			RCC->AHB1ENR &= ~_BV(5);
			break;
		case GPIOG:
			RCC->AHB1ENR &= ~_BV(6);
			break;
		case GPIOH:
			RCC->AHB1ENR &= ~_BV(7);
			break;
		case GPIOI:
			RCC->AHB1ENR &= ~_BV(8);
			break;
		default:
			break;
	}
}



/*************************************************************************************
 *
 *	@brief	- Initialize GPIO port with the given configuration settings
 *
 *	@param	- pGPIOHandle Data structure containing Base address of the Port, and
 *						  other configuration parameters such as pin no, mode, output
 *						  type, speed, PUPD register settings and alternate functions
 *
 *	@return	- None
 *
 *	@note	- Ports F, G and I are not available in devices with 100-pin packages
 *
 ************************************************************************************/
void GPIO_Init(GPIO_Handle_TypeDef *pGPIOHandle)
{

}

