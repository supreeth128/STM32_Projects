#include<stdint.h>
#include<stdbool.h>
#include "stm32f407xx.h"

void Init_LED(void);

int main(void)
{
	Init_LED();
	while (true) {
		GPIOD->ODR |= 0xFFFF;
		for (uint32_t i = 0; i < 1000000; i++);
		GPIOD->ODR &= ~0xFFFF;
		for (uint32_t i = 0; i < 1000000; i++);
	}

}

void Init_LED(void)
{
	RCC->AHB1ENR |= (1U << 3);
	GPIOD->MODER = (GPIOD->MODER & ~ 0xC000) | (1U << (15 * 2));

}



